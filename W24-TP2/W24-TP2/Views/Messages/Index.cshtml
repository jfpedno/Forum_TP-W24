@model IEnumerable<W24_TP2.Models.Message>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MsgActif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MsgText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MsgDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MsgView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sujet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MsgActif)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MsgText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MsgDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MsgView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sujet.SujetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MsgId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MsgId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MsgId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
